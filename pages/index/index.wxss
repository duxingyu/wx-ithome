.slide-image {
  height: 175px;
  width: 375px;
}
.list1,
.list2 {
  display: flex;
  border-bottom: 1px solid #eee;
  padding: 10px 0;
  margin: 0 10px;
}
.list .title {
  font-size: 14px;
}
.list .other {
  display: flex;
  justify-content: space-between;
  font-size: 12px;
  color: #aaa;
}
.crt view {
  display: flex;
  justify-content: space-between;
  margin-top: 6px;
}

.list image {
  width: 100px;
  height: 75px;
  border: 1px solid #ddd;
  margin-right: 10px;
}
.list1 .crt {
  line-height: 1.5;
  display: flex;
  flex-direction: column;
  width: 500rpx;
}
.list2 {
  flex-direction: column;
}
